{
  "name": "aria2-extension",
  "version": "0.4.1",
  "private": true,
  "dependencies": {
    "@emotion/react": "11.11.1",
    "@emotion/styled": "11.11.0",
    "@fontsource/roboto": "4.5.8",
    "@mui/icons-material": "5.14.3",
    "@mui/material": "5.14.5",
    "aria2": "4.1.2",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-router-dom": "6.15.0",
    "swr": "2.2.1"
  },
  "devDependencies": {
    "@trivago/prettier-plugin-sort-imports": "4.2.0",
    "@types/node": "18.17.6",
    "@types/react": "18.2.21",
    "@types/react-dom": "18.2.7",
    "@types/webextension-polyfill": "0.10.1",
    "@types/webpack": "5.28.1",
    "@typescript-eslint/eslint-plugin": "5.62.0",
    "@typescript-eslint/parser": "5.62.0",
    "eslint": "8.47.0",
    "eslint-config-prettier": "8.10.0",
    "eslint-config-standard": "17.1.0",
    "eslint-plugin-import": "2.28.1",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-promise": "6.1.1",
    "eslint-plugin-react": "7.33.2",
    "eslint-plugin-standard": "5.0.0",
    "husky": "8.0.3",
    "lint-staged": "13.3.0",
    "prettier": "2.8.8",
    "react-scripts": "5.0.1",
    "style-loader": "3.3.3",
    "ts-loader": "9.4.4",
    "typescript": "4.9.5",
    "web-ext": "7.6.2",
    "webextension-polyfill": "0.10.0",
    "webpack-cli": "5.1.4"
  },
  "scripts": {
    "dev": "npm run build && web-ext run --source-dir ./build/",
    "build_scripts": "webpack --config webpack.config.js",
    "build": "INLINE_RUNTIME_CHUNK=false react-scripts build && npm run build_scripts && cp -rf AriaNg build",
    "package": "web-ext build --config=webext.config.js",
    "complete": "npm run build && npm run package",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "type-check": "tsc --pretty --noEmit",
    "format": "prettier --write .",
    "lint": "eslint . --ext ts --ext tsx --ext js",
    "prepare": "husky install"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "lint-staged": {
    "*.{ts,tsx,js}": [
      "npm run lint",
      "npm run format"
    ],
    "*.{js,css,md}": "prettier --write"
  }
}

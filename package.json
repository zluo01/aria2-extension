{
  "name": "aria2-extension",
  "version": "0.3.6",
  "private": true,
  "dependencies": {
    "@emotion/react": "11.8.2",
    "@emotion/styled": "11.8.1",
    "@fontsource/roboto": "4.5.5",
    "@mui/icons-material": "5.5.1",
    "@mui/material": "5.5.1",
    "aria2": "4.1.2",
    "codemirror": "5.65.2",
    "react": "17.0.2",
    "react-codemirror2": "7.2.1",
    "react-dom": "17.0.2",
    "react-router-dom": "6.2.2"
  },
  "devDependencies": {
    "@trivago/prettier-plugin-sort-imports": "3.2.0",
    "@types/node": "16.11.26",
    "@types/react": "17.0.41",
    "@types/react-dom": "17.0.14",
    "@types/webextension-polyfill": "0.8.2",
    "@types/webpack": "5.28.0",
    "@typescript-eslint/eslint-plugin": "5.15.0",
    "@typescript-eslint/parser": "5.15.0",
    "css-loader": "6.7.1",
    "eslint": "8.11.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-config-standard": "16.0.3",
    "eslint-plugin-import": "2.25.4",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-promise": "6.0.0",
    "eslint-plugin-react": "7.29.4",
    "eslint-plugin-standard": "4.1.0",
    "husky": "7.0.4",
    "lint-staged": "12.3.7",
    "prettier": "2.6.0",
    "react-scripts": "5.0.0",
    "style-loader": "3.3.1",
    "ts-loader": "9.2.8",
    "typescript": "4.6.2",
    "web-ext": "6.7.0",
    "webextension-polyfill": "0.8.0",
    "webpack-cli": "4.9.2"
  },
  "scripts": {
    "dev": "npm run build && web-ext run --source-dir ./build/",
    "build_scripts": "webpack --config webpack.config.js",
    "build": "INLINE_RUNTIME_CHUNK=false react-scripts build && npm run build_scripts && cp -rf AriaNg build",
    "package": "web-ext build --config=webext.config.js",
    "complete": "npm run build && npm run package",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "type-check": "tsc --pretty --noEmit",
    "format": "prettier --write .",
    "lint": "eslint . --ext ts --ext tsx --ext js",
    "prepare": "husky install"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "lint-staged": {
    "*.{ts,tsx,js}": [
      "npm run lint",
      "npm run format"
    ],
    "*.{js,css,md}": "prettier --write"
  }
}

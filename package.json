{
  "name": "aria2-extension",
  "displayName": "Aria2 Integration Extension",
  "version": "0.5.2",
  "private": true,
  "dependencies": {
    "@emotion/react": "11.14.0",
    "@emotion/styled": "11.14.0",
    "@mui/icons-material": "6.4.5",
    "@mui/material": "6.4.5",
    "aria2": "4.1.2",
    "react": "19.0.0",
    "react-dom": "19.0.0",
    "react-router-dom": "7.1.5",
    "swr": "2.3.2"
  },
  "devDependencies": {
    "@eslint/js": "9.21.0",
    "@trivago/prettier-plugin-sort-imports": "5.2.2",
    "@types/node": "22.13.5",
    "@types/react": "19.0.10",
    "@types/react-dom": "19.0.4",
    "@types/webextension-polyfill": "0.12.2",
    "@vitejs/plugin-react-swc": "3.8.0",
    "eslint": "9.21.0",
    "eslint-config-prettier": "10.0.1",
    "eslint-plugin-import": "2.31.0",
    "eslint-plugin-promise": "7.2.1",
    "eslint-plugin-react": "7.37.4",
    "eslint-plugin-react-hooks": "5.1.0",
    "globals": "15.15.0",
    "husky": "9.1.7",
    "lint-staged": "15.4.3",
    "prettier": "3.5.2",
    "typescript": "5.7.3",
    "typescript-eslint": "8.24.1",
    "vite": "6.1.1",
    "vite-plugin-eslint": "1.8.1",
    "vite-tsconfig-paths": "5.1.4",
    "web-ext": "8.4.0",
    "webextension-polyfill": "0.12.0"
  },
  "scripts": {
    "dev": "npm run build && web-ext run --source-dir ./build/",
    "build": "vite build",
    "package": "web-ext build --config=webext.config.cjs",
    "complete": "npm run build && npm run package",
    "type-check": "tsc --pretty --noEmit",
    "format": "prettier --write .",
    "lint": "eslint .",
    "prepare": "husky"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "lint-staged": {
    "*.{ts,tsx,js}": [
      "eslint --cache --fix",
      "npm run lint",
      "npm run format"
    ],
    "*.{js,css,md}": "prettier --write"
  }
}

{
  "name": "aria2-extension",
  "version": "0.3.4",
  "private": true,
  "dependencies": {
    "@fontsource/roboto": "^4.4.5",
    "@material-ui/core": "4.11.4",
    "@material-ui/icons": "4.11.2",
    "@types/react": "17.0.13",
    "@types/react-dom": "17.0.8",
    "aria2": "4.1.2",
    "codemirror": "5.62.0",
    "react": "17.0.2",
    "react-codemirror2": "7.2.1",
    "react-dom": "17.0.2",
    "react-router-dom": "5.2.0"
  },
  "devDependencies": {
    "@trivago/prettier-plugin-sort-imports": "2.0.2",
    "@types/node": "14.17.4",
    "@types/react-router-dom": "5.1.7",
    "@types/webpack": "4.41.30",
    "@typescript-eslint/eslint-plugin": "4.28.1",
    "@typescript-eslint/parser": "4.28.1",
    "css-loader": "5.2.6",
    "eslint": "7.30.0",
    "eslint-config-prettier": "8.3.0",
    "eslint-config-standard": "16.0.3",
    "eslint-plugin-import": "2.23.4",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-promise": "5.1.0",
    "eslint-plugin-react": "7.24.0",
    "eslint-plugin-standard": "4.1.0",
    "html-webpack-plugin": "4.5.2",
    "husky": "7.0.0",
    "lint-staged": "11.0.0",
    "prettier": "2.3.2",
    "react-scripts": "4.0.3",
    "style-loader": "2.0.0",
    "ts-loader": "8.3.0",
    "typescript": "4.3.5",
    "web-ext": "6.2.0",
    "webextension-polyfill-ts": "0.26.0",
    "webpack-cli": "4.7.2"
  },
  "scripts": {
    "dev": "npm run build && web-ext run --source-dir ./build/",
    "build_scripts": "webpack --config webpack.config.js",
    "build": "INLINE_RUNTIME_CHUNK=false react-scripts build && npm run build_scripts && cp -rf AriaNg build",
    "package": "web-ext build --config=webext.config.js",
    "complete": "npm run build && npm run package",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "type-check": "tsc --pretty --noEmit",
    "format": "prettier --write .",
    "lint": "eslint . --ext ts --ext tsx --ext js",
    "prepare": "husky install"
  },
  "engines": {
    "node": ">=12.0.0",
    "npm": ">=6.9.0 <7.0.0"
  },
  "engine-strict": true,
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "lint-staged": {
    "*.{ts,tsx,js}": [
      "npm run lint",
      "npm run format"
    ],
    "*.{js,css,md}": "prettier --write"
  }
}

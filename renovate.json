{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    ":disableDependencyDashboard"
  ],
  "schedule": [
    "every weekend"
  ],
  "packageRules": [
    {
      "updateTypes": [
        "minor",
        "patch",
        "pin",
        "digest"
      ],
      "automerge": true
    },
    {
      "matchDepTypes": [
        "devDependencies"
      ],
      "matchPackagePatterns": [
        "lint",
        "prettier",
        "husky",
        "@trivago/"
      ],
      "automerge": true
    },
    {
      "groupName": "definitelyTyped",
      "matchPackagePrefixes": [
        "@types/"
      ]
    },
    {
      "groupName": "eslint",
      "matchPackagePrefixes": [
        "eslint",
        "@typescript-eslint/"
      ]
    },
    {
      "groupName": "styling",
      "matchPackagePrefixes": [
        "@emotion/",
        "@mui/"
      ]
    },
    {
      "groupName": "build-tools",
      "matchPackagePrefixes": [
        "vite",
        "@vitejs/"
      ]
    }
  ],
  "postUpdateOptions": [
    "npmDedupe"
  ]
}
